@page "/btnselect"

<h1>Button Select</h1>

<h2>@_message</h2>

<div class="calculator-grid" tabindex="0" @onkeydown="(e => UpdateHeading(e))"></div>

@code {
    private string _message = "Select a button to learn its position.";

    private void UpdateHeading(KeyboardEventArgs e)
    {
        _message = "Code: " + e.Code.ToString() + " :: " + "Key: " + e.Key.ToString();
    }
}